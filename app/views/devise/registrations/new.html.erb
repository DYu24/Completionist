<div class="container d-flex flex-column align-items-center py-4 px-5">
    <h2>Sign up</h2>

    <div class="w-100 mb-2">
        <%= bootstrap_form_with(model: resource, as: resource_name, url: registration_path(resource_name)) do |form| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <%= form.email_field :email, autofocus:true, autocomplete: "email" %>
            <%= form.password_field :password, autocomplete: "new-password", help: (@minimum_password_length ? "Must be at least #{@minimum_password_length} characters long" : "") %>
            <%= form.password_field :password_confirmation, autocomplete: "new-password" %>
            <%= form.primary "Sign up" %>
        <% end %>
    </div>

    <span>Already have an account? <%= link_to "Log in here", new_session_path(resource_name) %></span>
</div>
