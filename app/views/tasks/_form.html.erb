<%= bootstrap_form_with(model: task, url: task.new_record? ? list_tasks_path : list_task_path, local: true) do |form| %>
  <%= form.text_field :title, required: true %>
  <%= form.check_box :completed %>
  <%= form.primary "Save" %>
  <%= link_to "Cancel", :back, class: "btn btn-secondary" %>
<% end %>
